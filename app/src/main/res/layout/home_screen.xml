<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/orangeBackgrounddiv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/top_gradient"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:src="@drawable/flipkart_logo2"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_marginStart="-40dp"/>


        <!-- Phone Number Input -->

        <TextView
            android:id="@+id/LeftOfLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logoImageView"
            android:layout_marginStart="120dp"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#2e57e5"
            android:text="Flipkart"
            android:textSize="35sp"
            android:textStyle="italic" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LeftOfLogo"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/toggleSwitch"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="5dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="8dp" />

            <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/LeftOfLogo"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/search_box"
            android:drawableLeft="@drawable/outline_search"
            android:drawablePadding="8dp"
            android:hint="Search"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:drawableRight="@drawable/outline_keyboard_voice"
            />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginStart="18dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="Brand Mall"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_gradient"
        android:layout_marginBottom="90dp"
        android:layout_below="@id/orangeBackgrounddiv">

        <GridLayout
            android:id="@+id/gridLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="170dp"
            android:rowCount="2"
            android:columnCount="3"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/firstRowIconGrid"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <!--Icon 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <ImageView
                android:id="@+id/icon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleX="2.0"
                android:scaleY="2.0"
                android:layout_columnWeight="1"
                android:src="@drawable/icon1"
                android:contentDescription="Scan and Pay"
                android:layout_margin="18dp"/>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Scan &amp; Pay"
                android:gravity="center" />


              </LinearLayout>

                <!--Icon 2 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleX="2.0"
                    android:scaleY="2.0"
                    android:layout_columnWeight="1"
                    android:src="@drawable/icon_2"
                    android:contentDescription="Scan and Pay"
                    android:layout_margin="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Grocery"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center" />

              </LinearLayout>
                <!--Icon 3 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icon_2"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Grocery"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </LinearLayout>

                <!--Icon 4 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icon_2"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Grocery"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>

<!--Second Row-->
            <LinearLayout
                android:id="@+id/SecondRowIconGrid"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal">

                <!--Icon 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"

                        android:layout_columnWeight="1"
                        android:src="@drawable/icon1"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Scan &amp; Pay"
                        android:gravity="center" />


                </LinearLayout>

                <!--Icon 6 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon6"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icon_2"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Grocery"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </LinearLayout>
                <!--Icon 7 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon7"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icon_2"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Grocery"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </LinearLayout>
                <!--Icon 8 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon8"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleX="2.0"
                        android:scaleY="2.0"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icon_2"
                        android:contentDescription="Scan and Pay"
                        android:layout_margin="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="Grocery"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <ImageView
            android:id="@+id/addvertisementImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/add"
            android:contentDescription="Add Image"/>

        <ImageView
            android:id="@+id/addvertisementImg2"
            android:layout_below="@id/addvertisementImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/add"
            android:contentDescription="Add Image"/>

    </RelativeLayout>
<!--Nav Bottom Bar-->
    <RelativeLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/nav_barbox"
        android:layout_alignParentBottom="true">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_home_24"
            android:tint="#747577"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:contentDescription="Home"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_explore_24"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:contentDescription="Search"
            android:tint="#747577"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_category_24"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:contentDescription="Profile"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:tint="#747577"
                        />

        <!-- account Icon -->
        <ImageView
            android:id="@+id/AcccountIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_account_circle_24"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_marginLeft="280dp"
            android:contentDescription="Account"
            android:layout_centerVertical="true"
            android:tint="#747577"
                        />

        <!-- Cart Icon -->
        <ImageView
            android:id="@+id/CartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_add_shopping_cart_24"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:layout_marginRight="20dp"
            android:contentDescription="Cart"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="#747577"
                        />

    </RelativeLayout>

</RelativeLayout>
